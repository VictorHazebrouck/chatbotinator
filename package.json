{
	"name": "surveysinator",
	"private": true,
	"scripts": {
		"docker:up": "docker compose -f docker/docker-compose.yaml up",
		"docker:down": "docker compose -f docker/docker-compose.yaml down",
		"docker:clean": "docker compose -f docker/docker-compose.yaml down -v",
		"docker:local:up": "docker compose -f docker/docker-compose.local.yaml up",
		"docker:local:down": "docker compose -f docker/docker-compose.local.yaml down",
		"docker:local:clean": "docker compose -f docker/docker-compose.local.yaml down -v",
		"docker:local:fclean": "docker system prune -a",
		"dev": "bun run ./scripts/dev.ts",
		"migrate": "bun run ./scripts/migrate.ts",
		"test": "bun run ./scripts/test.ts",
		"check-types": "bun run ./scripts/check-types.ts",
		"clean": "bun run ./scripts/clean.ts",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@types/bun": "^1.3.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"typescript": "^5.9.3"
	},
	"engines": {
		"bun": "1.3.2"
	},
	"packageManager": "bun@1.3.2",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		]
	}
}
